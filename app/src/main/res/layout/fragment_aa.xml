<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_aa_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/fragment_aa_label"
        app:layout_constraintBottom_toTopOf="@+id/btn_open_fr_ab"
        app:layout_constraintEnd_toEndOf="@+id/btn_open_fr_ab"
        app:layout_constraintStart_toStartOf="@+id/btn_open_fr_ab"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/btn_open_fr_ab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_fragment_ab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />
    
</androidx.constraintlayout.widget.ConstraintLayout>